<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:aop="http://www.springframework.org/schema/aop"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:tx="http://www.springframework.org/schema/tx"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
		http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-4.0.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.0.xsd
		http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-4.0.xsd">

<!-- Configure Aspects AutoProxy -->
<aop:aspectj-autoproxy/>

<!-- Define Model Beans -->

<bean name="circle" class="org.springAOPLearning.model.Circle">
	<!-- <property name="name" value="Circle Name"/> -->
</bean>

<bean name="triangle" class="org.springAOPLearning.model.Triangle">
	<property name="name" value="Triangle Name"/>
</bean>

<!-- Define Service Beans -->

<bean name="shapeService" class="org.springAOPLearning.service.ShapeService" autowire="byName"/>


<!-- Define Aspect Bean -->
<bean name="loggingAspect" class="org.springAOPLearning.aspect.LoggingAspect"/>

</beans>
